// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                 Int           @id @default(autoincrement())
  firebaseUid        String?
  name               String
  email              String        @unique
  digitaloceanApiKey String?
  minecraftUsername  String?
  worlds             WorldAccess[]
  lastLogin          DateTime
  createdAt          DateTime      @default(now())
  updatedAt          DateTime
  deletedAt          DateTime?
}

model World {
  id          String        @id @default(uuid())
  name        String
  description String?
  flavor      String
  dropletId   String?
  users       WorldAccess[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime
  deletedAt   DateTime?
}

model WorldAccess {
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  world     World     @relation(fields: [worldId], references: [id])
  worldId   String
  role      String
  createdAt DateTime  @default(now())
  updatedAt DateTime
  deletedAt DateTime?

  @@id([userId, worldId])
}
